<compiz>
	<plugin name="wallpaper" useBcop="true">
		<deps>
				<relation type="after">
						<plugin>cube</plugin>
				</relation>
		</deps>
		<_short>Wallpaper</short>
		<_long>Draw the desktop wallpaper</long>
		<category>Utility</category>
		<screen>
			<option name="images" type="list">
				<_short>Backgrounds</short>
				<_long>The background specifications (as explained in DOCUMENTATION) to use.</long>
				<type>string</type>
			</option>
			<option name="tile" type="bool">
				<_short>Tile or Stretch</short>
				<_long>Tile backgrounds as opposed to stretching</long>
				<type>bool</type>
			</option>
		</screen>
	</plugin>
</compiz>

	
	
