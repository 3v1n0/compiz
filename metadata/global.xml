<compiz>
	<core>
		<screen>
			<subgroup>
				<short>Window opacities</short>
				<option type="list" name="opacity_matches"/>
				<option type="list" name="opacity_values"/>
			</subgroup>
		</screen>
	</core>
	<!-- blur metadata -->
	<plugin name="blur">
		<category>Effects</category>
	</plugin>
	<!-- decoration metadata -->
	<plugin name="decoration">
		<category>Effects</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- cube metadata -->
	<plugin name="cube">
		<category>Desktop</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- fade metadata -->
	<plugin name="fade">
		<category>Effects</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- glib metadata -->
	<plugin name="glib">
		<category>Utility</category>
	</plugin>
	<!-- inotify metadata -->
	<plugin name="inotify">
		<category>Utility</category>
	</plugin>
	<!-- minimize metadata -->
	<plugin name="minimize">
		<category>Effects</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- notification metadata -->
	<plugin name="notification">
		<category>Utility</category>
	</plugin>
	<!-- plane metadata -->
	<plugin name="plane">
		<category>Desktop</category>
	</plugin>
	<!-- rotate metadata -->
	<plugin name="rotate">
		<category>Desktop</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- scale metadata -->
	<plugin name="scale">
		<category>Window Management</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- png metadata -->
	<plugin name="png">
		<category>Image Loading</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- annotate metadata -->
	<plugin name="annotate">
		<category>Extras</category>
	</plugin>
	<!-- dbus metadata -->
	<plugin name="dbus">
		<category>Utility</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- screenshot metadata -->
	<plugin name="screenshot">
		<category>Extras</category>
	</plugin>
	<!-- place metadata -->
	<plugin name="place">
		<category>Window Management</category>
		<autoenable>true</autoenable>
		<screen>
			<group>
				<short>Fixed Window Placement</short>
				<subgroup>
					<short>Windows with fixed positions</short>
					<option type="list" name="position_matches"/>
					<option type="list" name="position_x_values"/>
					<option type="list" name="position_y_values"/>
				</subgroup>
				<subgroup>
					<short>Windows with fixed viewport</short>
					<option type="list" name="viewport_matches"/>
					<option type="list" name="viewport_x_values"/>
					<option type="list" name="viewport_y_values"/>
				</subgroup>
			</group>
		</screen>
	</plugin>
	<!-- move metadata -->
	<plugin name="move">
		<category>Window Management</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- resize metadata -->
	<plugin name="resize">
		<category>Window Management</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- switcher metadata -->
	<plugin name="switcher">
		<category>Window Management</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- clone metadata -->
	<plugin name="clone">
		<category>Desktop</category>
	</plugin>
	<!-- Svg metadata -->
	<plugin name="svg">
		<category>Image Loading</category>
	</plugin>
	<!-- fuse metadata -->
	<plugin name="fs">
		<category>Utility</category>
	</plugin>
	<!-- regex metadata -->
	<plugin name="regex">
		<category>Utility</category>
	</plugin>
	<!-- video metadata -->
	<plugin name="video">
		<category>Utility</category>
	</plugin>
	<!-- water metadata -->
	<plugin name="water">
		<category>Effects</category>
	</plugin>
	<!-- wobbly metadata -->
	<plugin name="wobbly">
		<category>Effects</category>
		<autoenable>true</autoenable>
	</plugin>
	<!-- zoom metadata -->
	<plugin name="zoom">
		<category>Accessibility</category>
		<autoenable>true</autoenable>
	</plugin>
</compiz>
