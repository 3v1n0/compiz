<compiz>
    <plugin name="resize">
	<_short>Resize Window</_short>
	<_long>Resize window</_long>
	<display>
	    <option name="initiate" type="action">
		<_short>Initiate Window Resize</_short>
		<_long>Start resizing window</_long>
		<allowed key="true" button="true"/>
		<default>
		    <key>&lt;Alt&gt;F8</key>
		    <button>&lt;Alt&gt;Button2</button>
		</default>
	    </option>
	    <option name="mode" type="string">
		<_short>Default Resize Mode</_short>
		<_long>Default mode used for window resizing</_long>
		<default>Normal</default>
		<allowed>
		    <value>Normal</value>
		    <value>Outline</value>
		    <value>Rectangle</value>
		    <value>Stretch</value>
		</allowed>
	    </option>
	    <option name="border_color" type="color">
		<_short>Border Color</_short>
		<_long>Border color used for outline and rectangle resize modes</_long>
		<default>
		    <red>0x2fff</red>
		    <green>0x2fff</green>
		    <blue>0x4fff</blue>
		    <alpha>0x9fff</alpha>
		</default>
	    </option>
	    <option name="fill_color" type="color">
		<_short>Fill Color</_short>
		<_long>Fill color used for rectangle resize mode</_long>
		<default>
		    <red>0x2fff</red>
		    <green>0x2fff</green>
		    <blue>0x4fff</blue>
		    <alpha>0x4fff</alpha>
		</default>
	    </option>
	</display>
    </plugin>
</compiz>
