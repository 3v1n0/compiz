<?xml version="1.0"?>
<compiz>
  <plugin name="ezoom" useBcop="true">
    <short>ezoom</short>
	<long>Enhanced zoom</long>
	<rule type="after">fade</rule>
    <display>
      <group>
        <short>Bindings</short>
        <option name="zoom_in" type="action">
          <short>Zoom in</short>
          <long>Zoom in</long>
          <allowed key="true" button="true"/>
          <default>
            <key></key>
	    <button>Button4</button>
          </default>
        </option>
        <option name="zoom_out" type="action">
          <short>Zoom out</short>
          <long>Zoom out</long>
          <allowed key="true" button="true"/>
          <default>
            <key></key>
	    <button>Button5</button>
          </default>
        </option>
      </group>
    </display>
  </plugin>
</compiz>
