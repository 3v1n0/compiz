<?xml version="1.0"?>
<compiz>
	<plugin name="vpswitch" useBcop="true">
		<_short>Viewport mouse switch</_short>
		<_long>Change viewport on mouse events on the Desktop</_long>
		<category>Desktop</category>
		<display>
			<group>
				<_short>Viewport Switching</_short>
				<option name="left" type="action">
					<_short>Move Left</_short>
					<_long>Move to the left</_long>
					<allowed button="true"/>
				</option>
				<option name="right" type="action">
					<_short>Move Right</_short>
					<_long>Move to the right</_long>
					<allowed button="true"/>
				</option>
				<option name="up" type="action">
					<_short>Move Up</_short>
					<_long>Move up</_long>
					<allowed button="true"/>
				</option>
				<option name="down" type="action">
					<_short>Move Down</_short>
					<_long>Move down</_long>
					<allowed button="true"/>
				</option>
				<option name="next" type="action">
					<_short>Move Next</_short>
					<_long>Move to the next viewport</_long>
					<allowed button="true"/>
					<default>
						<button>Button5</button>
					</default>
				</option>
				<option name="prev" type="action">
					<_short>Move Prev</_short>
					<_long>Move to the previous viewport</_long>
					<allowed button="true"/>
					<default>
						<button>Button4</button>
					</default>
				</option>
			</group>
		</display>
	</plugin>
</compiz>
